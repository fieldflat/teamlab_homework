<h1>Welcome to Item_index</h1>
<p><%= link_to "New", root_path %></p>

<%= form_with(url: search_path, data: {remote: false}) do |f| %>
  <%= f.text_field :text %>
  <%= f.submit "Search" %>
<% end %>

<% @items.each do |item| %>
  <div>
    <b>title</b>: <%= item.title %>
    <b>description</b>: <%= item.description %>
    <b>price</b>: <%= item.price %>
    <%= link_to "Show", item_path(item.id) %>
    <%= link_to "Edit", edit_item_path(item.id) %>
    <%= link_to "Delete", item_path(item.id), method: :delete %>
  </div>
<% end %>
<h1>Welcome to Item_show</h1>
<div>
  <p><b>title</b>: <%= @item.title %></p>
  <p><b>description</b>: <%= @item.description %></p>
  <p><b>price</b>: <%= @item.price %></p>
  <%= image_tag @item.image.url if @item.image? %>
  <%= link_to "Delete", item_path(@item.id), method: :delete, data: {confirm: "削除します．よろしいですか？"} %>
</div>

<p><%= link_to "Index", items_path %></p>
